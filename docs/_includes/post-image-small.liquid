
<div class="container" style="display: inline; align-content: center">
    <a href="{{ include.imagePath }}" data-toggle="lightbox"
        data-title='{{ include.altText }}'>
        <img class="container post-image-small"  alt='{{ include.altText }}' src='{{ include.imagePath }}' />

    </a>
    {% comment %}<div class="container figure-caption"{% endcomment %}
         {% comment %}style="margin-top: -16px !important; text-align: center; margin-bottom: 16px">{% endcomment %}
        {% comment %}{{ include.altText }}{% endcomment %}
    {% comment %}</div>{% endcomment %}
</div>
