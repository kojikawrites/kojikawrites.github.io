<div class="container" style="display: block; align-content: center">
<a href="{{ include.imagePath }}" data-toggle="lightbox"
    data-title='{{ include.altText }}'>
  <img class="container post-image"  alt='{{ include.altText }}' src='{{ include.imagePath }}' />
</a>
<div class="container figure-caption"
     style="margin-top: -16px !important; text-align: center; margin-bottom: 16px">
  {{ include.altText }}
</div>
</div>
