---
// Only render in development mode
if (import.meta.env.PROD) {
  return Astro.redirect('/404');
}

const title = 'Deploy to GitHub';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #f5f5f5;
      padding: 2rem;
      line-height: 1.6;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h1 {
      color: #333;
      margin-bottom: 1.5rem;
      border-bottom: 2px solid #007bff;
      padding-bottom: 0.5rem;
    }

    .status-section {
      background: #f8f9fa;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1.5rem;
    }

    .status-section h2 {
      font-size: 1.1rem;
      color: #495057;
      margin-bottom: 0.5rem;
    }

    .file-list {
      list-style: none;
      margin-top: 0.5rem;
    }

    .file-list li {
      padding: 0.25rem 0;
      font-family: monospace;
      font-size: 0.9rem;
    }

    .file-status {
      display: inline-block;
      width: 2rem;
      font-weight: bold;
    }

    .status-modified { color: #ffc107; }
    .status-added { color: #28a745; }
    .status-deleted { color: #dc3545; }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #495057;
      font-weight: 500;
    }

    textarea {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ced4da;
      border-radius: 4px;
      font-family: inherit;
      font-size: 1rem;
      resize: vertical;
      min-height: 100px;
    }

    textarea:focus {
      outline: none;
      border-color: #007bff;
      box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
    }

    .button-group {
      display: flex;
      gap: 1rem;
    }

    button {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s;
      font-weight: 500;
    }

    .btn-primary {
      background: #007bff;
      color: white;
    }

    .btn-primary:hover:not(:disabled) {
      background: #0056b3;
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
    }

    .btn-secondary:hover:not(:disabled) {
      background: #545b62;
    }

    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .message {
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      display: none;
    }

    .message.show {
      display: block;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .loading {
      display: none;
      margin-top: 1rem;
      text-align: center;
      color: #6c757d;
    }

    .loading.show {
      display: block;
    }

    .branch-info {
      background: #e7f3ff;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      font-family: monospace;
      color: #004085;
      margin-bottom: 1rem;
    }

    .no-changes {
      color: #28a745;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸš€ Deploy to GitHub</h1>

    <div id="message" class="message"></div>

    <div class="status-section">
      <h2>Git Status</h2>
      <div id="branch-info" class="branch-info">Loading...</div>
      <div id="status-content">Loading git status...</div>
    </div>

    <div id="deploy-form" style="display: none;">
      <form id="pushForm">
        <div class="form-group">
          <label for="commitMessage">Commit Message</label>
          <textarea
            id="commitMessage"
            name="message"
            placeholder="Enter a commit message describing your changes..."
            required
          ></textarea>
        </div>

        <div class="button-group">
          <button type="submit" class="btn-primary">Commit & Push</button>
          <button type="button" class="btn-secondary" onclick="window.location.reload()">Refresh Status</button>
        </div>
      </form>

      <div id="loading" class="loading">
        <p>Pushing changes to GitHub...</p>
      </div>
    </div>
  </div>

  <script>
    // Fetch git status on page load
    async function loadGitStatus() {
      try {
        const response = await fetch('/api/git/status');
        const data = await response.json();

        if (data.error) {
          showMessage('error', data.error);
          return;
        }

        // Update branch info
        document.getElementById('branch-info').textContent = `Branch: ${data.branch}`;

        // Update status content
        const statusContent = document.getElementById('status-content');
        if (!data.hasChanges) {
          statusContent.innerHTML = '<p class="no-changes">âœ“ No changes to commit</p>';
          document.getElementById('deploy-form').style.display = 'none';
        } else {
          let html = '<ul class="file-list">';
          data.files.forEach(file => {
            const statusClass = file.status.includes('M') ? 'status-modified' :
                               file.status.includes('A') ? 'status-added' :
                               file.status.includes('D') ? 'status-deleted' : '';
            html += `<li><span class="file-status ${statusClass}">${file.status}</span> ${file.file}</li>`;
          });
          html += '</ul>';
          statusContent.innerHTML = html;
          document.getElementById('deploy-form').style.display = 'block';
        }
      } catch (error) {
        showMessage('error', `Failed to load git status: ${error.message}`);
      }
    }

    // Handle form submission
    document.getElementById('pushForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const message = document.getElementById('commitMessage').value;
      if (!message.trim()) {
        showMessage('error', 'Please enter a commit message');
        return;
      }

      const loading = document.getElementById('loading');
      const buttons = document.querySelectorAll('button');

      // Disable form and show loading
      buttons.forEach(btn => btn.disabled = true);
      loading.classList.add('show');

      try {
        const response = await fetch('/api/git/push', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ message })
        });

        const data = await response.json();

        if (data.error) {
          showMessage('error', `Error: ${data.error}\n${data.details || ''}`);
        } else {
          showMessage('success', `âœ“ Successfully pushed to ${data.branch}!`);
          document.getElementById('commitMessage').value = '';
          setTimeout(() => window.location.reload(), 2000);
        }
      } catch (error) {
        showMessage('error', `Failed to push: ${error.message}`);
      } finally {
        buttons.forEach(btn => btn.disabled = false);
        loading.classList.remove('show');
      }
    });

    function showMessage(type, text) {
      const messageEl = document.getElementById('message');
      messageEl.textContent = text;
      messageEl.className = `message ${type} show`;
      setTimeout(() => {
        messageEl.classList.remove('show');
      }, 5000);
    }

    // Load status on page load
    loadGitStatus();
  </script>
</body>
</html>
