---
// Only render in development mode
if (import.meta.env.PROD) {
  return Astro.redirect('/404');
}

const title = 'Deploy to GitHub';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #f5f5f5;
      padding: 2rem;
      line-height: 1.6;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h1 {
      color: #333;
      margin-bottom: 1.5rem;
      border-bottom: 2px solid #007bff;
      padding-bottom: 0.5rem;
    }

    .status-section {
      background: #f8f9fa;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1.5rem;
    }

    .status-section h2 {
      font-size: 1.1rem;
      color: #495057;
      margin-bottom: 0.5rem;
    }

    .file-list {
      list-style: none;
      margin-top: 0.5rem;
    }

    .file-list li {
      padding: 0.25rem 0;
      font-family: monospace;
      font-size: 0.9rem;
      word-break: break-all;
      overflow-wrap: break-word;
    }

    .file-status {
      display: inline-block;
      width: 2rem;
      font-weight: bold;
    }

    .status-modified { color: #ffc107; }
    .status-added { color: #28a745; }
    .status-deleted { color: #dc3545; }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #495057;
      font-weight: 500;
    }

    textarea {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ced4da;
      border-radius: 4px;
      font-family: inherit;
      font-size: 1rem;
      resize: vertical;
      min-height: 100px;
    }

    textarea:focus {
      outline: none;
      border-color: #007bff;
      box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
    }

    .button-group {
      display: flex;
      gap: 1rem;
    }

    button {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s;
      font-weight: 500;
    }

    .btn-primary {
      background: #007bff;
      color: white;
    }

    .btn-primary:hover:not(:disabled) {
      background: #0056b3;
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
    }

    .btn-secondary:hover:not(:disabled) {
      background: #545b62;
    }

    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .message {
      padding: 1rem;
      padding-right: 3rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      display: none;
      position: relative;
    }

    .message.show {
      display: block;
    }

    #message-text {
      display: block;
      word-break: break-word;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .message-close {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      background: none;
      border: none;
      font-size: 1.2rem;
      cursor: pointer;
      padding: 0.25rem 0.5rem;
      opacity: 0.6;
      color: inherit;
    }

    .message-close:hover {
      opacity: 1;
    }

    .loading {
      display: none;
      margin-top: 1rem;
      text-align: center;
      color: #6c757d;
    }

    .loading.show {
      display: block;
    }

    .branch-info {
      background: #e7f3ff;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      font-family: monospace;
      color: #004085;
      margin-bottom: 1rem;
    }

    .no-changes {
      color: #28a745;
      font-weight: 500;
    }

    .build-section {
      background: #f8f9fa;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1.5rem;
    }

    .build-section h2 {
      font-size: 1.1rem;
      color: #495057;
      margin-bottom: 0.5rem;
    }

    .build-output {
      background: #2d2d2d;
      color: #f8f8f2;
      padding: 1rem;
      border-radius: 4px;
      font-family: 'Courier New', Courier, monospace;
      font-size: 0.85rem;
      max-height: 400px;
      overflow-y: auto;
      white-space: pre-wrap;
      word-break: break-word;
      display: none;
    }

    .build-output.show {
      display: block;
    }

    .build-output.success {
      border-left: 4px solid #28a745;
    }

    .build-output.error {
      border-left: 4px solid #dc3545;
    }

    .btn-info {
      background: #17a2b8;
      color: white;
    }

    .btn-info:hover:not(:disabled) {
      background: #138496;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸš€ Deploy to GitHub</h1>

    <div id="message" class="message">
      <button class="message-close" onclick="document.getElementById('message').classList.remove('show')">âœ•</button>
      <span id="message-text"></span>
    </div>

    <div class="build-section"> <!--  hiive-blog-dev -->
      <h2>Test Build</h2>
      <button type="button" id="testBuildBtn" class="btn-info">Run Test Build</button>
      <div id="loading-build" class="loading">
        <p>Building project... This may take up to 2 minutes.</p>
      </div>
      <div id="build-output" class="build-output"></div>
    </div>

    <div class="status-section">
      <h2>Git Status</h2>
      <div id="branch-info" class="branch-info">Loading...</div>
      <div id="status-content" >Loading git status...</div> <!-- style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" -->
    </div>

    <div id="deploy-form" style="display: none;">
      <form id="pushForm">
        <div class="form-group">
          <label for="commitMessage">Commit Message</label>
          <textarea
            id="commitMessage"
            name="message"
            placeholder="Enter a commit message describing your changes..."
            required
          ></textarea>
        </div>

        <div class="button-group">
          <button type="submit" class="btn-primary">Commit & Push</button>
          <button type="button" class="btn-secondary" onclick="window.location.reload()">Refresh Status</button>
        </div>
      </form>

      <div id="loading" class="loading">
        <p>Pushing changes to GitHub...</p>
      </div>
    </div>
  </div>

  <script>
    // Fetch git status on page load
    async function loadGitStatus() {
      try {
        const response = await fetch('/api/git/status');
        const data = await response.json();

        if (data.error) {
          showMessage('error', data.error);
          return;
        }

        // Update branch info
        document.getElementById('branch-info').textContent = `Branch: ${data.branch}`;

        // Update status content
        const statusContent = document.getElementById('status-content');
        if (!data.hasChanges) {
          statusContent.innerHTML = '<p class="no-changes">âœ“ No changes to commit</p>';
          document.getElementById('deploy-form').style.display = 'none';
        } else {
          let html = '<ul class="file-list">';
          data.files.forEach(file => {
            const statusClass = file.status.includes('M') ? 'status-modified' :
                               file.status.includes('A') ? 'status-added' :
                               file.status.includes('D') ? 'status-deleted' : '';
            html += `<li><span class="file-status ${statusClass}">${file.status}</span> ${file.file}</li>`;
          });
          html += '</ul>';
          statusContent.innerHTML = html;
          document.getElementById('deploy-form').style.display = 'block';
        }
      } catch (error) {
        showMessage('error', `Failed to load git status: ${error.message}`);
      }
    }

    // Handle form submission
    document.getElementById('pushForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const message = document.getElementById('commitMessage').value;
      if (!message.trim()) {
        showMessage('error', 'Please enter a commit message');
        return;
      }

      const loading = document.getElementById('loading');
      const buttons = document.querySelectorAll('button');

      // Disable form and show loading
      buttons.forEach(btn => btn.disabled = true);
      loading.classList.add('show');

      try {
        const request_url = '/api/git/push';
        const response = await fetch(request_url, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({'message': message}),
        });

        const data = await response.json();

        if (data.success) {
          showMessage('success', `âœ“ Successfully pushed to ${data.branch}!`);
          document.getElementById('commitMessage').value = '';
          setTimeout(() => window.location.reload(), 2000);
        } else {
          showMessage('error', `Error: ${data.error || 'Push failed'}\n${data.output || ''}`);
        }
      } catch (error) {
        showMessage('error', `Failed to push: ${error.message}`);
      } finally {
        buttons.forEach(btn => btn.disabled = false);
        loading.classList.remove('show');
      }
    });

    function showMessage(type, text, autoHide = true) {
      const messageEl = document.getElementById('message');
      const messageText = document.getElementById('message-text');
      messageText.textContent = text;
      messageEl.className = `message ${type} show`;

      // Only auto-hide if requested (don't auto-hide build messages)
      if (autoHide) {
        setTimeout(() => {
          messageEl.classList.remove('show');
        }, 10000); // 10 seconds for regular messages
      }
    }

    // Handle test build button
    document.getElementById('testBuildBtn').addEventListener('click', async () => {
      const buildBtn = document.getElementById('testBuildBtn');
      const loadingBuild = document.getElementById('loading-build');
      const buildOutput = document.getElementById('build-output');

      // Disable button and show loading
      buildBtn.disabled = true;
      loadingBuild.classList.add('show');
      buildOutput.classList.remove('show', 'success', 'error');
      buildOutput.textContent = '';

      try {
        // Call the local API which coordinates with the build service
        const response = await fetch('/api/git/build', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        });

        const data = await response.json();

        // Show build output
        buildOutput.textContent = data.output || '';
        buildOutput.classList.add('show');

        if (data.success) {
          buildOutput.classList.add('success');
          showMessage('success', data.message, false);
        } else {
          buildOutput.classList.add('error');
          showMessage('error', data.error || 'Build failed', false);
        }
      } catch (error) {
        buildOutput.textContent = `Failed to run build: ${error.message}`;
        buildOutput.classList.add('show', 'error');
        showMessage('error', `Failed to run build: ${error.message}`, false);
      } finally {
        buildBtn.disabled = false;
        loadingBuild.classList.remove('show');
      }
    });

    // Load status on page load
    loadGitStatus();
  </script>
</body>
</html>
