---
import FaviconLink from "../links/FaviconLink.astro";
interface Props {
    name: string;
    url?: string;
}

const { name, url } = Astro.props;
// Remove everything up to and including "//" and trailing slashes
const displayUrl = url
    ?.replace(/^.*?\/\//, '')
    .replace(/\/+$/, '');

---
<div class="text-nowrap">
    <h3>{name}</h3>
    {url ?
        <FaviconLink href={url} showIcon={false}>
            {displayUrl}
        </FaviconLink>
        : ""
    }
</div>
<div>
    <slot/>
    <hr class="lg:hidden opacity-25" />
</div>
